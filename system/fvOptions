FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvOptions;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //


turbine1
{
    type            crossFlowTurbineALSource;
    active          on;
    selectionMode   cellSet; // cellSet || points || cellZone
    cellSet         turbine1;

    crossFlowTurbineALSourceCoeffs
    {
        fieldNames          (U);
        origin              (0 0 0);
        axis                (0 0 1);    // Negative for opposite rotation
        rotorRadius         0.4572;
        freeStreamVelocity  (1 0 0);
        tipSpeedRatio       1.9;

        dynamicStall
        {
            active              on;
            dynamicStallModel   LeishmanBeddoesSGC;
            LeishmanBeddoesSGCCoeffs
            {
                Tp          1.7;        // Default = 1.7
                Tf          3.0;        // Default = 3.0
                TAlpha      6.25;
                alphaDS0DiffDeg 3.8;
                r0          0.01;
                Tv          11;
                Tvl         8.7;
                B1          0.5;
                eta         0.98;
                E0          0.16;
            }
        }

        flowCurvature
        {
            active              on;
            flowCurvatureModel  Goude; // Goude || MandalBurton
        }

        blades
        {
            blade1
            {
                writePerf   true;
                nElements   14;
                endEffects  on;
                elementProfiles (NACA63_4_021);
                elementData
                ( // axialDistance, radius, azimuth, chord, chordMount, pitch
                    (-0.3429 0.4572 0.0 0.06533 0.25 0.0)
                    ( 0.3429 0.4572 0.0 0.06533 0.25 0.0)
                );
            }
            blade2
            {
                $blade1;
                writePerf   false;
                azimuthalOffset 120;
            }
            blade3
            {
                $blade2;
                azimuthalOffset 240;
            }
        }

        struts
        {
            strut1Upper
            {
                writePerf   true;
                nElements   6;
                elementProfiles (strutA);
                elementData
                ( // axialDistance, radius, azimuth, chord, chordMount, pitch
                    (0.17145 0.0500 0.0 0.0467 0.25 0.0)
                    (0.17145 0.4572 0.0 0.0467 0.25 0.0)
                );
            }
            strut1Lower
            {
                $strut1Upper;
                elementData
                ( // axialDistance, radius, azimuth, chord, chordMount, pitch
                    (-0.17145 0.0500 0.0 0.0467 0.25 0.0)
                    (-0.17145 0.4572 0.0 0.0467 0.25 0.0)
                );
            }
            strut2Upper
            {
                $strut1Upper;
                writePerf   false;
                azimuthalOffset 120;
            }
            strut2Lower
            {
                $strut1Lower;
                writePerf   false;
                azimuthalOffset 120;
            }
            strut3Upper
            {
                $strut2Upper;
                azimuthalOffset 240;
            }
            strut3Lower
            {
                $strut2Lower;
                azimuthalOffset 240;
            }
        }

        shaft
        {
            nElements   20;
            elementProfiles (cylinder);
            elementData
            ( // axialDistance, diameter
                (-1.067 0.04826)
                ( 1.067 0.04826)
            );
        }

        profileData
        {
            NACA63_4_021
            {
                data
                (   // alpha C_l C_d
                    #include "NACA0021_1.6e5"
                );
            }
            strutA
            {
                data
                (
                    (-180 0 0.2)
                    ( 180 0 0.2)
                );
            }
            cylinder
            {
                data ((-180 0 1.1)(180 0 1.1));
            }
        }
    }
}

turbine2
{
    $turbine1;
    cellSet     turbine2;
    active      on;
    crossFlowTurbineALSourceCoeffs
    {
        origin  (1 1 0);
        axis    (0 0 -1);
    }
}

